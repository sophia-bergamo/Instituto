{
   "compilerOptions": {
      "lib": ["es6"],
      "target": "es2016",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "rootDir": "./src",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "strict": true,
      "skipLibCheck": true,
      "esModuleInterop": true
   },
   "include": [
      "**/*.ts",
      "src/test/*.ts"
    ]
}